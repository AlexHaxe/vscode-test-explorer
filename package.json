{
  "name": "vscode-test-explorer",
  "displayName": "Test Explorer for Visual Studio Code",
  "description": "Run your tests in the Sidebar of Visual Studio Code",
  "author": "Holger Benl <hbenl@evandor.de>",
  "publisher": "hbenl",
  "version": "0.0.1",
  "license": "MIT",
  "categories": [
    "Other"
  ],
  "keywords": [
    "test"
  ],
  "main": "out/main.js",
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install",
    "reinstall": "rimraf node_modules package-lock.json && npm install",
    "clean": "rimraf out vscode-test-explorer-*.vsix",
    "build": "tsc",
    "watch": "tsc -w",
    "rebuild": "npm run clean && npm run build",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "dependencies": {
    "escape-string-regexp": "^1.0.5",
    "mocha": "^4.0.1",
    "tslib": "^1.8.0"
  },
  "devDependencies": {
    "@types/escape-string-regexp": "0.0.32",
    "@types/mocha": "^2.2.44",
    "typescript": "^2.5.3",
    "vsce": "^1.32.0",
    "vscode": "^1.1.6"
  },
  "engines": {
    "vscode": "^1.17.0"
  },
  "activationEvents": [
    "onView:extension.test-explorer.tests"
  ],
  "contributes": {
    "configuration": [
      {
        "title": "Configuration for the Test Explorer extension",
        "properties": {
          "test-explorer": {
            "type": "object",
            "description": "Configuration for the Test Explorer extension",
            "properties": {
              "files": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "An array of globs for the test files"
              }
            }
          }
        }
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "extension.test-explorer.tests",
          "name": "Test Explorer"
        }
      ]
    },
    "commands": [
      {
        "command": "extension.test-explorer.reload",
        "title": "Test Explorer: Reload the test tree"
      },
      {
        "command": "extension.test-explorer.start",
        "title": "Test Explorer: Run tests",
        "icon": "./icons/start.svg"
      },
      {
        "command": "extension.test-explorer.cancel",
        "title": "Test Explorer: Cancel running tests",
        "icon": "./icons/stop.svg"
      },
      {
        "command": "extension.test-explorer.debug",
        "title": "Test Explorer: Debug tests"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "extension.test-explorer.reload"
        },
        {
          "command": "extension.test-explorer.start",
          "group": "navigation",
          "when": "!testsRunning"
        },
        {
          "command": "extension.test-explorer.cancel",
          "group": "navigation",
          "when": "testsRunning"
        }
      ],
      "view/item/context": [
        {
          "command": "extension.test-explorer.start"
        },
        {
          "command": "extension.test-explorer.debug"
        }
      ]
    }
  }
}
